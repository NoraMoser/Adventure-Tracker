{
  "expo": {
    "name": "explorAble",
    "slug": "explorable",
    "version": "1.0.29",
    "orientation": "portrait",
    "icon": "./assets/adaptive-icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#1e3a5f"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.moser.explorable",
      "buildNumber": "2",
      "infoPlist": {
        "NSUserNotificationUsageDescription": "Allow ExplorAble to send you notifications about friend requests, comments, and activity updates.",
        "NSLocationWhenInUseUsageDescription": "explorAble needs access to your location to track your activities and save your favorite spots.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "explorAble needs access to your location to track your activities in the background.",
        "NSCameraUsageDescription": "explorAble needs access to your camera to take photos of your adventure spots.",
        "NSPhotoLibraryUsageDescription": "explorAble needs access to your photo library to add photos to your saved locations.",
        "NSPhotoLibraryAddUsageDescription": "explorAble needs permission to save photos to your photo library.",
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "scheme": "explorable",
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#2d5a3d",
      "androidMode": "default",
      "androidCollapsedTitle": "ExplorAble"
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F5F5F0"
      },
      "package": "com.moser.explorable",
      "versionCode": 30,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO"
      ],
      "softwareKeyboardLayoutMode": "pan",
      "useNextNotificationsApi": true,
      "allowFontScaling": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow ExplorAble to track your activities in the background for accurate route recording.",
          "isAndroidBackgroundLocationEnabled": true,
          "isBackgroundLocationEnabled": true
        }
      ],
      "expo-task-manager",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#2d5a3d",
          "sounds": []
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow explorAble to access your camera to capture your adventure moments.",
          "microphonePermission": "Allow explorAble to access your microphone for video recording.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow explorAble to access your photos to add to your saved spots.",
          "savePhotosPermission": "Allow explorAble to save photos to your gallery.",
          "isAccessMediaLocationEnabled": true,
          "isAudioEnabled": false
        }
      ],
      [
        "expo-image-picker",
        {
          "cameraPermission": "Allow app to access camera",
          "useLegacyImagePicker": true
        }
      ],
      "expo-router",
      "expo-mail-composer",
      "expo-web-browser"
    ],
    "extra": {
      "eas": {
        "projectId": "0e548ecd-901d-40e5-a107-3a05329592e9"
      }
    }
  }
}
